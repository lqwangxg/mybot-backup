{
  "adapter": ["default", "websocket", "webhook", "line"],
  "data":[
    {
      "name":"sample of on hears keyword direct reply",
      "hears": "sample",
      "events": ["message","user_say"],
      "reply": "I heard a sample message."
    },
    {
      "name":"sample of on hears patterns direct reply",
      "hears":　"/^\\d+$/g",
      "events": ["message","user_say"],
      "reply": { "text": "数字が入力された。"}
    },
    {
      "name":"sample of on hears patterns direct replies with parameters",
      "hears": [
        "/\\d{4}-\\d{2}-\\d{2}}/g",
        "/\\d{4}\/\\d{2}\/\\d{2}}/g"
        ],
      "events": ["message","user_say"],
      "reply": ["日付が入力された。", "日付:${$0}"]
    },
    {
      "name":"sample of on hears keywords or patterns reply with select options",
      "hears":  ["お湯","温泉","観光","旅行", "/WIFI/i", "/JAPAN/i"] ,
      "events": ["message","user_say"],
      "reply": {
        "text":"旅行観光に行きたいね？おすすめがあります。",
        "quick_replies": [
          {
              "title": "名古屋城",
              "payload": "名古屋城"
          },
          {
              "title": "大阪城公園",
              "payload": "大阪城公園"
          }
        ]
      }
    }
  ]
}